<UserControl x:Class="LLM.Controls.LlmChatControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Loaded="UserControl_Loaded"
             Unloaded="UserControl_Unloaded"
             MinWidth="420"
             MinHeight="300">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/WPF;component/Themes/SharedStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <!-- Conversation (history) list items: black text for light panel -->
            <DataTemplate x:Key="ConversationListTemplate">
                <Grid Margin="2" ToolTip="{Binding Title}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Orientation="Vertical">
                        <TextBlock Text="{Binding Title}" Foreground="Black" FontWeight="SemiBold" TextTrimming="CharacterEllipsis" />
                        <TextBlock Text="{Binding LastUpdated, StringFormat={}{0:HH:mm}}" Foreground="#555" FontSize="10" />
                    </StackPanel>
                    <Button Grid.Column="1" Content="🗑️" ToolTip="Delete Conversation" 
                            Click="DeleteConversation_Click" Tag="{Binding}"
                            Margin="2,0,0,0" Width="20" Height="20" FontSize="10" Opacity="0.7">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource IconButtonCompact}">
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="BorderThickness" Value="0" />
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FFE5E5" />
                                        <Setter Property="Opacity" Value="1.0" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </DataTemplate>
            <!-- Chat message template: revert to light themed brushes -->
            <DataTemplate x:Key="MessageTemplate">
                <Border Style="{StaticResource ChatMessageContainerStyle}" MouseLeftButtonUp="MessageBorder_MouseLeftButtonUp">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="{Binding Role}" FontWeight="Bold" Foreground="{StaticResource ChatTextBrush}" />
                        <Button Grid.Row="0" Grid.Column="1" Content="↺" Tag="{Binding Content}" ToolTip="Reuse" Click="ReuseUserMessage_Click" Style="{StaticResource ReuseButtonStyle}" />
                        <Button Grid.Row="0" Grid.Column="2" Content="📋" Tag="{Binding Content}" ToolTip="Copy" Click="CopyMessage_Click" Style="{StaticResource IconButtonCompact}" />
                        <Button Grid.Row="0" Grid.Column="3" Content="🗺️" Tag="{Binding Content}" ToolTip="Apply to Map" Click="ApplyToMap_Click">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource IconButtonCompact}">
                                    <Style.Triggers>
                                        <!-- Only show for Assistant and System messages -->
                                        <DataTrigger Binding="{Binding Role}" Value="User">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        <Button Grid.Row="0" Grid.Column="4" Content="🗑️" Tag="{Binding}" ToolTip="Delete Message" Click="DeleteMessage_Click" Opacity="0.6">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource IconButtonCompact}">
                                    <Setter Property="Background" Value="Transparent" />
                                    <Setter Property="BorderThickness" Value="0" />
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#FFE5E5" />
                                            <Setter Property="Opacity" Value="1.0" />
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        <TextBox Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="5" 
                                 Margin="0,4,0,0" 
                                 Text="{Binding Content}" 
                                 TextWrapping="Wrap" 
                                 Foreground="{StaticResource ChatTextBrush}"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 IsReadOnly="True"
                                 IsTabStop="False"
                                 Cursor="IBeam"
                                 Padding="0"
                                 ContextMenuService.IsEnabled="True"
                                 KeyDown="MessageTextBox_KeyDown">
                            <TextBox.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="Copy" Click="CopyMessage_Click" Tag="{Binding Content}" />
                                    <MenuItem Header="Select All" Click="SelectAllMessage_Click" />
                                    <Separator>
                                        <Separator.Style>
                                            <Style TargetType="Separator">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Role}" Value="User">
                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Separator.Style>
                                    </Separator>
                                    <MenuItem Header="Apply to Map" Click="ApplyToMap_Click" Tag="{Binding Content}">
                                        <MenuItem.Style>
                                            <Style TargetType="MenuItem">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Role}" Value="User">
                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </MenuItem.Style>
                                    </MenuItem>
                                    <Separator />
                                    <MenuItem Header="Delete Message" Click="DeleteMessage_Click" Tag="{Binding}" />
                                </ContextMenu>
                            </TextBox.ContextMenu>
                        </TextBox>
                    </Grid>
                </Border>
            </DataTemplate>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="170" />
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <!-- History / Conversations Panel -->
        <Border Grid.Column="0" Style="{StaticResource PanelBorderStyle}" Padding="6">
            <DockPanel>
                <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,6" HorizontalAlignment="Left">
                    <Button Content="＋" Style="{StaticResource IconMiniButtonStyle}" Click="NewConversation_Click" ToolTip="New" />
                    <Button Content="⚙" Style="{StaticResource IconMiniButtonStyle}" Margin="4,0,0,0" Click="SettingsButton_Click" ToolTip="Settings" />
                </StackPanel>
                <ScrollViewer DockPanel.Dock="Bottom" VerticalScrollBarVisibility="Auto">
                    <ListBox x:Name="ConversationList"
                             ItemsSource="{Binding Conversations}"
                             ItemTemplate="{StaticResource ConversationListTemplate}"
                             SelectedItem="{Binding ActiveConversation, Mode=TwoWay}"
                             SelectionChanged="ConversationList_SelectionChanged"
                             ItemContainerStyle="{StaticResource ChatListBoxItemStyle}" />
                </ScrollViewer>
            </DockPanel>
        </Border>
        <GridSplitter Grid.Column="1" Width="5" Background="#333" />
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Conversation -->
            <Border Grid.Row="0" Style="{StaticResource PanelBorderStyle}">
                <ScrollViewer x:Name="ConversationScroll" VerticalScrollBarVisibility="Auto" Padding="6">
                    <ItemsControl x:Name="ConversationItems" ItemTemplate="{StaticResource MessageTemplate}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                </ScrollViewer>
            </Border>

            <!-- Input (multiline) -->
            <Border Grid.Row="1" Style="{StaticResource PanelBorderStyle}" Margin="0,6,0,6">
                <TextBox x:Name="InputBox"
                         AcceptsReturn="False"
                         TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto"
                         MinHeight="70"
                         MaxHeight="220"
                         Background="Transparent"
                         Foreground="{StaticResource ChatTextBrush}"
                         CaretBrush="{StaticResource ChatTextBrush}"
                         BorderThickness="0"
                         Padding="8"
                         FontFamily="Consolas"
                         FontSize="13"
                         PreviewKeyDown="InputBox_PreviewKeyDown"
                         ToolTip="Enter to send. Ctrl+Enter for newline." />
            </Border>

            <!-- Command bar -->
            <DockPanel Grid.Row="2" LastChildFill="False" Margin="0,0,0,0" Height="40">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="4,0,0,0">
                    <Button x:Name="SendButton" Style="{StaticResource IconMiniButtonStyle}" Content="➤" ToolTip="Send (Enter)" Click="SendButton_Click" />
                    <Button x:Name="CancelButton" Style="{StaticResource IconMiniButtonStyle}" Content="◼" ToolTip="Cancel" IsEnabled="False" Click="CancelButton_Click" />
                    <Button x:Name="ClearButton" Style="{StaticResource IconMiniButtonStyle}" Content="🗑" ToolTip="Clear" Click="ClearButton_Click" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="12,0,0,0">
                    <ProgressBar x:Name="Progress" Width="100" Height="8" IsIndeterminate="True" Visibility="Collapsed" />
                    <CheckBox x:Name="EnterSendsCheckBox" Content="↵" Margin="10,0,0,0" Checked="EnterSendsCheckBox_Changed" Unchecked="EnterSendsCheckBox_Changed" Foreground="{StaticResource ChatTextBrush}" ToolTip="Enter sends" />
                </StackPanel>
                <TextBlock x:Name="StatusBlock" Margin="12,0,0,0" VerticalAlignment="Center" Foreground="{StaticResource SubtleTextBrush}" Text="Ready" />
            </DockPanel>
        </Grid>
    </Grid>
</UserControl>