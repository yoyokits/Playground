<Window
    x:Class="LLM.Settings.SettingsDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="LLM Settings"
    Width="540"
    Height="420"
    ResizeMode="CanResize"
    WindowStartupLocation="CenterOwner">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>

                <TextBlock FontWeight="Bold" Text="System Prompt" />
                <TextBox
                    Height="100"
                    Margin="0,4,0,12"
                    AcceptsReturn="True"
                    Text="{Binding Working.SystemPrompt}"
                    TextWrapping="Wrap"
                    VerticalScrollBarVisibility="Auto" />

                <UniformGrid
                    Margin="0,0,0,12"
                    Columns="2"
                    Rows="2">
                    <StackPanel Margin="0,0,12,0">
                        <TextBlock FontWeight="Bold" Text="Max Tokens" />
                        <TextBox Text="{Binding Working.MaxTokens}" />
                    </StackPanel>
                    <StackPanel Margin="0,0,12,0">
                        <TextBlock FontWeight="Bold" Text="Temperature" />
                        <TextBox Text="{Binding Working.Temperature}" />
                    </StackPanel>
                    <StackPanel Margin="0,0,12,0">
                        <CheckBox Content="Enter sends message" IsChecked="{Binding Working.EnterSends}" />
                    </StackPanel>
                </UniformGrid>

                <TextBlock
                    FontSize="11"
                    Foreground="#888"
                    Text="Note: Models are managed directly in GPT4All application. Ensure GPT4All is running with Local Server enabled."
                    TextWrapping="Wrap" />
            </StackPanel>
        </ScrollViewer>

        <StackPanel
            Grid.Row="1"
            Margin="0,12,0,0"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                Width="90"
                Margin="0,0,6,0"
                Click="Save_Click"
                Content="Save" />
            <Button
                Width="90"
                Content="Cancel"
                IsCancel="True" />
        </StackPanel>
    </Grid>
</Window>