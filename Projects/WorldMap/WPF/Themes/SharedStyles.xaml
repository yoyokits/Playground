<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Base colors -->
    <Color x:Key="BaseBackgroundColor">#202020</Color>
    <Color x:Key="PanelBackgroundColor">#1E1E1E</Color>
    <Color x:Key="BorderColor">#444444</Color>
    <Color x:Key="AccentColor">#2D466E</Color>
    <Color x:Key="AccentHoverColor">#3E5D90</Color>
    <Color x:Key="ButtonHoverColor">#555555</Color>
    <Color x:Key="SystemMessageColor">#3C3C3C</Color>
    <Color x:Key="UserMessageColor">#2D466E</Color>
    <Color x:Key="AssistantMessageColor">#465A2D</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="BaseBackgroundBrush" Color="{StaticResource BaseBackgroundColor}" />
    <SolidColorBrush x:Key="PanelBackgroundBrush" Color="{StaticResource PanelBackgroundColor}" />
    <SolidColorBrush x:Key="BorderBrushColor" Color="{StaticResource BorderColor}" />
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}" />
    <SolidColorBrush x:Key="AccentHoverBrush" Color="{StaticResource AccentHoverColor}" />
    <SolidColorBrush x:Key="ButtonHoverBrush" Color="{StaticResource ButtonHoverColor}" />
    <SolidColorBrush x:Key="SystemMessageBrush" Color="{StaticResource SystemMessageColor}" />
    <SolidColorBrush x:Key="UserMessageBrush" Color="{StaticResource UserMessageColor}" />
    <SolidColorBrush x:Key="AssistantMessageBrush" Color="{StaticResource AssistantMessageColor}" />
    <SolidColorBrush x:Key="ChatTextBrush" Color="#DDDDDD" />
    <SolidColorBrush x:Key="SubtleTextBrush" Color="#999999" />
    <SolidColorBrush x:Key="ButtonIconForeground" Color="#FFFFFF" />
    <SolidColorBrush x:Key="ButtonIconForegroundHover" Color="#FFFFFF" />
    <SolidColorBrush x:Key="ButtonIconBackground" Color="#2A2A2A" />
    <SolidColorBrush x:Key="ButtonIconBackgroundHover" Color="#3A3A3A" />
    <SolidColorBrush x:Key="ButtonIconBackgroundPressed" Color="#44608C" />

    <!-- Rounded button template -->
    <ControlTemplate x:Key="RoundedIconButtonTemplate" TargetType="Button">
        <Border x:Name="bd" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="8" SnapsToDevicePixels="True" Padding="{TemplateBinding Padding}">
            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
        </Border>
        <ControlTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter TargetName="bd" Property="Background" Value="{StaticResource ButtonIconBackgroundHover}" />
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter TargetName="bd" Property="Background" Value="{StaticResource ButtonIconBackgroundPressed}" />
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
                <Setter TargetName="bd" Property="Opacity" Value="0.45" />
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <!-- Base icon button style (updated bigger & rounded) -->
    <Style TargetType="Button" x:Key="IconMiniButtonStyle">
        <Setter Property="Width" Value="30" />
        <Setter Property="Height" Value="28" />
        <Setter Property="Margin" Value="3,0,0,0" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Background" Value="{StaticResource ButtonIconBackground}" />
        <Setter Property="BorderBrush" Value="#555" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Foreground" Value="{StaticResource ButtonIconForeground}" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="ToolTipService.ShowDuration" Value="60000" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="RenderOptions.ClearTypeHint" Value="Enabled" />
        <Setter Property="Template" Value="{StaticResource RoundedIconButtonTemplate}" />
    </Style>

    <!-- Larger compact style identical now (alias) -->
    <Style TargetType="Button" x:Key="IconButtonCompact" BasedOn="{StaticResource IconMiniButtonStyle}" />

    <!-- Reuse button only visible for User role -->
    <Style TargetType="Button" x:Key="ReuseButtonStyle" BasedOn="{StaticResource IconButtonCompact}">
        <Setter Property="Visibility" Value="Collapsed" />
        <Style.Triggers>
            <DataTrigger Binding="{Binding Role}" Value="User">
                <Setter Property="Visibility" Value="Visible" />
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <!-- Chat message container style -->
    <Style TargetType="Border" x:Key="ChatMessageContainerStyle">
        <Setter Property="Margin" Value="0,3" />
        <Setter Property="Padding" Value="6" />
        <Setter Property="CornerRadius" Value="4" />
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrushColor}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Background" Value="#303030" />
        <Style.Triggers>
            <DataTrigger Binding="{Binding Role}" Value="System">
                <Setter Property="Background" Value="{StaticResource SystemMessageBrush}" />
            </DataTrigger>
            <DataTrigger Binding="{Binding Role}" Value="User">
                <Setter Property="Background" Value="{StaticResource UserMessageBrush}" />
            </DataTrigger>
            <DataTrigger Binding="{Binding Role}" Value="Assistant">
                <Setter Property="Background" Value="{StaticResource AssistantMessageBrush}" />
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <!-- ScrollViewer / Panel backgrounds -->
    <Style TargetType="Border" x:Key="PanelBorderStyle">
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrushColor}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Background" Value="{StaticResource PanelBackgroundBrush}" />
    </Style>

    <!-- ListBoxItem Style (Selection) -->
    <Style TargetType="ListBoxItem" x:Key="ChatListBoxItemStyle">
        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0" />
        <Style.Triggers>
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Background" Value="{StaticResource AccentBrush}" />
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>