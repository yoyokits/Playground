<Window
    x:Class="WorldMapApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WorldMapApp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="World Map Viewer"
    Width="1200"
    Height="700"
    Loaded="Window_Loaded"
    mc:Ignorable="d">
    <Window.Resources>
        <!--  Wikipedia-style country styling  -->
        <Style x:Key="CountryPathStyle" TargetType="Path">
            <Setter Property="Fill" Value="#FFF8F8F8" />
            <Setter Property="Stroke" Value="#FFAAAAAA" />
            <Setter Property="StrokeThickness" Value="0.5" />
            <Setter Property="ToolTip" Value="{Binding Tag, RelativeSource={RelativeSource Self}}" />
            <Setter Property="SnapsToDevicePixels" Value="True" />
            <Setter Property="Cursor" Value="Hand" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Fill" Value="#FFCFE3FF" />
                    <Setter Property="Stroke" Value="#FF3366CC" />
                    <Setter Property="StrokeThickness" Value="1.2" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Background="#FFFFFFFF">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>

        <!--  Map viewport  -->
        <Border
            Grid.Row="0"
            Background="White"
            BorderBrush="#FFE0E0E0"
            BorderThickness="0,0,0,1">
            <ScrollViewer
                x:Name="MapScrollViewer"
                HorizontalScrollBarVisibility="Auto"
                PreviewMouseWheel="MapScrollViewer_PreviewMouseWheel"
                VerticalScrollBarVisibility="Auto">
                <Canvas x:Name="MapCanvas" Background="White">
                    <Canvas.RenderTransform>
                        <ScaleTransform x:Name="ZoomTransform" ScaleX="1" ScaleY="1" />
                    </Canvas.RenderTransform>
                </Canvas>
            </ScrollViewer>
        </Border>

        <!--  Status bar  -->
        <StatusBar
            Grid.Row="1"
            Background="#FFFDFDFD"
            BorderBrush="#FFE0E0E0"
            BorderThickness="0,1,0,0">
            <StatusBarItem>
                <TextBlock
                    x:Name="StatusText"
                    Margin="5,0"
                    Text="Ready" />
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Margin="5,0,0,0" Text="Zoom: " />
                    <TextBlock
                        x:Name="ZoomText"
                        Margin="0,0,10,0"
                        Text="100%" />
                </StackPanel>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>