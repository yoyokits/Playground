<Window
    x:Class="WorldMapApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:WorldMapControls.Controls;assembly=WorldMapControls"
    xmlns:llm="clr-namespace:LLM.Controls;assembly=LLM"
    Title="World Map Viewer"
    Width="1200"
    Height="750"
    Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- Toolbar -->
            <RowDefinition Height="*" />
            <!-- Content -->
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" LastChildFill="False" Background="#2A2A2A" Height="40" Margin="0,0,0,4">
            <Button x:Name="ApplyColorButton"
                    Content="Apply Color"
                    Width="110"
                    Height="26"
                    Margin="8,7,0,7"
                    IsEnabled="False"
                    Click="ApplyColorButton_Click" />
        </DockPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="430" />
            </Grid.ColumnDefinitions>

            <controls:WorldMapViewer x:Name="Viewer" Grid.Column="0" />

            <Border Grid.Column="1"
                    BorderBrush="#444"
                    BorderThickness="1"
                    Background="#1E1E1E"
                    Padding="4">
                <llm:LlmChatControl x:Name="LlmChat" />
            </Border>
        </Grid>
    </Grid>
</Window>