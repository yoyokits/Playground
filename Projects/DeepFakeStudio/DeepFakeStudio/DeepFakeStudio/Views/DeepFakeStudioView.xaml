<UserControl
    x:Class="DeepFakeStudio.Views.DeepFakeStudioView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DeepFakeStudio.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:DeepFakeStudio.ViewModels"
    d:DataContext="{d:DesignInstance viewmodels:DeepFakeStudioViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid Margin="2">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <local:DeepFakeStudioProjectView
            Grid.Column="0"
            Margin="2"
            DataContext="{Binding DeepFakeStudioProject}" />
        <local:DeepFakeStudioPreviewView
            Grid.Column="1"
            Margin="2"
            DataContext="{Binding DeepFakeStudioPreview}" />
    </Grid>
</UserControl>